!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Analytics'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Analytics'}"}
    = stylesheet_link_tag 'application', media: 'all'

    = javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js'
    = javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.6.0/underscore-min.js'
    = javascript_include_tag 'http://code.highcharts.com/highcharts.js'
    = javascript_include_tag 'http://code.highcharts.com/modules/heatmap.js'
    = javascript_include_tag 'application'
    = javascript_include_tag 'chartkick'
    = csrf_meta_tags
  %body
    %header
      = render 'layouts/navigation'
    %main{:role => "main"}
      = render 'layouts/messages'
      = yield
