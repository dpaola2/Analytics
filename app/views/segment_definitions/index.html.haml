%ol.breadcrumb
  %li.active Segments

.span8
  .panel.panel-default
    .panel-heading
      = link_to "Create segment", new_segment_definition_path, :class => "btn btn-primary btn-sm"
      = @segment_defs.count
      segments
    .panel-body
    %ul.list-group
      - @segment_defs.each do |segment_def|
        %a{:href => segment_definition_path(segment_def), :class => "list-group-item"}
          = segment_def.name
          %span.label.label-primary
            = segment_def.member_count
            identities
          %span.label.label-info.pull-right
            - if segment_def.updated_at == segment_def.created_at
              processing
            - else
              == updated #{time_ago_in_words(segment_def.updated_at)} ago
