%ol.breadcrumb
  %li= link_to "Identities", identities_path
  %li.active= @identity.email

.span8
  .panel.panel-default
    .panel-heading
      = image_tag(avatar_url(@identity.email), :class => "img-thumbnail")
      = @identity.email
      events (newest first)
    .panel-body
      %h3 Segments:
      - @identity.segment_definitions.each do |seg|
        = link_to seg.name, segment_definition_path(seg), :class => "btn btn-sm btn-primary"
      %h3 Activity
      %table.table
        %tr
          %th ID
          %th name
          %th when
          %th timestamp
        - @identity.standard_events.each do |se|
          %tr
            %td= se.id
            %td= se.name
            %td== #{time_ago_in_words(se.timestamp)} ago
            %td= se.timestamp
